---
const navitems = ["Home", "About", "Skills", "Projects"];

---

<nav class="nav-links">
     <div></div>
     <div></div>
     <h4>Welcome and Hello World</h4>
     <ul>
          {navitems.map((item) => <li><a href="">{item}</a></li>)}
     </ul>
</nav>

<style>
     .nav-links{
          display: flex;
          justify-content: space-around;
          align-items: center;
          background-color: #2f2fa2;
          min-height: 6vh;
     }
     .nav-links h4{
          color: #553d67;
          font-size: 1.7rem;
          font-weight: bold;
          letter-spacing: 0.2rem;
     }
     .nav-links ul{
          display: flex;
          justify-content: space-evenly;
          color: white;
          list-style: none;
          width: 30%;
     }
     .nav-links ul li{
          font-size: 1.4rem;
          color: white;
     }
     .nav-links ul li a{
          text-decoration: none;
          color: white;
     }
</style>
